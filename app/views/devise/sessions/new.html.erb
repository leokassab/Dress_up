<div class="sign-in">
  <div class="container">

    <div class="pic-logo">
      <%= image_tag("toge.png", width: 320, height: 390) %>
    </div>

    <div  data-controller="sign-in">
      <div class="button-to-sign" data-action="click->sign-in#displayForm">
        <%= render "shared/button_sign_in" %>
      </div>
      <div class="form-sign-in">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'd-none', data: { sign_in_target: 'form' } }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "sub-sign" %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'd-none', data: { sign_in_target: 'infos' }  %>
          </div>
        <% end %>
      </div>
    </div>

    <%= link_to new_registration_path(resource_name) do %>
      <div class="button-to-sign">
        <%= render "shared/button_sign_up" %>
      </div>
    <% end %>
  </div>
</div>

<div class="sign-in">
  <div class="container">

    <div class="pic-logo" style="background-image: url('<%= cl_image_path "Capture_d_écran_2022-02-11_à_14.59.54-removebg-preview_zggmba", width: 250, height: 400 %>')">
    </div>

    <div class="button-to-sign">
      <%= render "shared/button_sign_in" %>
      <%= render "shared/button_sign_up" %>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

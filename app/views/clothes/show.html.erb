<h1>Show Clothe</h1>

<%= cl_image_tag @clothe.photo.key %>

<p>Add to tags</p>
<div>
  <% @tags.each do |t|%>
    <%= link_to t.name, clothe_tags_path(@clothe, tag_id: t), method: :post %>
  <% end %>
</div>

<%= link_to "Add to avatar", avatar_path(clothe_id: @clothe.id) %>

<p>Category: <%= @clothe.category %></p>
<p>Brand: <%= @clothe.brand %></p>
<p>Size: <%= @clothe.size %></p>
<p>Color: <%= @clothe.colour %></p>
<p>Fabric: <%= @clothe.material %></p>

<%# Carousel des Hauts %>

<div id="carouselExampleControls1" class="carousel slide" data-interval="false">
  <% if @clothe != nil && @clothe.category == "Chest" && @clothe.photo.attached? %>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= cl_image_tag @clothe.photo.key, class:"d-block w-5" %>
      </div>
      <% @chest.each do |i| %>
        <div class="carousel-item">
          <%= cl_image_tag i.photo.key, class:"d-block w-5" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="carousel-inner">
        <div class="carousel-item active">
          <%= cl_image_tag @chest.first.photo.key, class:"d-block w-5" %>
        </div>
        <% @chest.last(@chest.length-1).each do |i| %>
          <div class="carousel-item">
            <%= cl_image_tag i.photo.key, class:"d-block w-5" %>
          </div>
        <% end %>
      </div>
  <% end %>

  <a class="carousel-control-prev" href="#carouselExampleControls1" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls1" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<div class="container" data-controller="search-clothes">
  <div class="search">
      <%= render "shared/search" %>
  </div>
  <div class="dot">
    <%= link_to clothes_path do  %>
      <p>Clothes</p>
    <% end %>
    <%= link_to outfits_path do %>
      <p>Outfits</p>
    <% end %>
    <p class="active-index">Tags</p>
  </div>
  <div class="tag-index">
    <% @tags.each do |tag| %>
      <%= link_to clothes_path(tag_id: tag.id) do %>
        <%= render "shared/category", tag: tag %>
      <% end %>
    <% end %>
  </div>
</div>
